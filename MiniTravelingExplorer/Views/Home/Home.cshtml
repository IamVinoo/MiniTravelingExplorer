@model MiniTravelingExplorer.Models.User
@using MiniTravelingExplorer.Models
@using MiniTravelingExplorer.Utils

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_Header")

@{
    HomePageData homePageData = (HomePageData)ViewData[Constant.HOME_PAGE_DATA];
    int totalLocation = 0;
    int totalRoom = 0;
    int totalStaff = 0;
    int? totalTestimonial = 0;
    List<Room> featuredRoomList = new List<Room>();
    List<Testimonial> testimonialList = new List<Testimonial>();

    if (homePageData != null)
    {
        totalLocation = homePageData.TotalLocation;
        totalRoom = homePageData.TotalRoom;
        totalStaff = homePageData.TotalStaff;
        totalTestimonial = homePageData.TestimonialList?.Count;
        featuredRoomList = homePageData.FeaturedRoomList;
        testimonialList = homePageData.TestimonialList;
    }
}

<!-- Carousel Start -->
<div class="container-fluid p-0 mb-5">
    <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="w-100" src="../../Images/Hotel-Front.jpg" alt="Image">
                <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                    <div class="p-3" style="max-width: 700px;">
                        <h6 class="section-title text-white text-uppercase mb-3 animated slideInDown">Welcome</h6>
                        <h1 class="display-3 text-white mb-4 animated slideInDown">Discover Paradise</h1>
                        <h1 class="display-3 text-white mb-4 animated slideInDown">and Start Exploring</h1>
                        <a href="javascript:void(0);" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft home-landing-search-button">Search</a>
                        <a href="/Location/List" class="btn btn-light py-md-3 px-md-5 animated slideInRight">Browse</a>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="w-100" src="../../Images/Hotel-Back.jpg" alt="Image">
                <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                    <div class="p-3" style="max-width: 700px;">
                        <h6 class="section-title text-white text-uppercase mb-3 animated slideInDown">Welcome</h6>
                        <h1 class="display-3 text-white mb-4 animated slideInDown">Discover Paradise</h1>
                        <h1 class="display-3 text-white mb-4 animated slideInDown">and Start Exploring</h1>
                        <a href="javascript:void(0);" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft home-landing-search-button">Search</a>
                        <a href="/Location/List" class="btn btn-light py-md-3 px-md-5 animated slideInRight">Browse   </a>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#header-carousel"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
<!-- Carousel End -->
<!-- Location Search Start -->
<div class="container-fluid booking pb-5 wow fadeIn home-search-container" data-wow-delay="0.1s">
    <div class="container">
        <div class="bg-white shadow" style="padding: 35px;">
            @Html.Partial("_LocationSearch")
        </div>
    </div>
</div>
<!-- Location Search End -->
<!-- About Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5 align-items-center">
            <div class="col-lg-6">
                <h6 class="section-title text-primary text-uppercase ml-55">About Us</h6>
                <h1 class="mb-2"><span class="home-welcome-text">Welcome to</span> <br class="hide-lg" /> <span class="text-primary text-uppercase home-title-text">Mini Traveling Explorer</span></h1>
                <p class="mb-4">Our vision for Mini Traveling Explorer is to revolutionize the way people plan and experience travel by providing a seamless and personalized platform that empowers users to organize their trips efficiently and effortlessly. We envision a world where travel planning is intuitive, stress-free, and tailored to individual preferences, allowing users to focus on creating unforgettable memories.</p>
                <div class="row g-3 pb-4">
                    <div id="home_about_location_count" class="col-sm-3 cursor-pointer wow fadeIn" data-wow-delay="0.1s">
                        <div class="border rounded p-1">
                            <div class="border rounded text-center p-4">
                                <i class="fa fa-map-signs fa-2x text-primary mb-2"></i>
                                <h2 class="mb-1" data-toggle="counter-up">@totalLocation</h2>
                                <p class="mb-0">Location@(totalLocation > 1 ? "s": "")</p>
                            </div>
                        </div>
                    </div>
                    <div id="home_about_room_count" class="col-sm-3 cursor-pointer wow fadeIn" data-wow-delay="0.1s">
                        <div class="border rounded p-1">
                            <div class="border rounded text-center p-4">
                                <i class="fa fa-home fa-2x text-primary mb-2"></i>
                                <h2 class="mb-1" data-toggle="counter-up">@totalRoom</h2>
                                <p class="mb-0">Room@(totalRoom > 1 ? "s": "")</p>
                            </div>
                        </div>
                    </div>
                    <div id="home_about_staff_count" class="col-sm-3 cursor-pointer wow fadeIn" data-wow-delay="0.3s">
                        <div class="border rounded p-1">
                            <div class="border rounded text-center p-4">
                                <i class="fa fa-users-cog fa-2x text-primary mb-2"></i>
                                <h2 class="mb-1" data-toggle="counter-up">@totalStaff</h2>
                                <p class="mb-0">Staff@(totalStaff > 1 ? "s": "")</p>
                            </div>
                        </div>
                    </div>
                    <div id="home_about_testimonial_count" class="col-sm-3 cursor-pointer wow fadeIn" data-wow-delay="0.5s">
                        <div class="border rounded p-1">
                            <div class="border rounded text-center p-4">
                                <i class="fa fa-users fa-2x text-primary mb-2"></i>
                                <h2 class="mb-1" data-toggle="counter-up">@totalTestimonial</h2>
                                <p class="mb-0 margin-left-m15">Testimonial@(totalTestimonial > 1 ? "s": "")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="row g-3">
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-80 wow zoomIn" data-wow-delay="0.1s" src="../../Images/Cold.jpg" style="margin-top: 25%;">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-100 wow zoomIn" data-wow-delay="0.3s" src="../../Images/Spring.jpg">
                    </div>
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-70 wow zoomIn" data-wow-delay="0.5s" src="../../Images/Fall.jpg">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.7s" src="../../Images/Venice.jpg">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
<!-- Room Start -->
@if (featuredRoomList != null && featuredRoomList.Any())
{
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h6 class="section-title text-center text-primary text-uppercase">Our Rooms</h6>
                <h1 class="mb-5">Explore Our <span class="text-primary text-uppercase">Rooms</span></h1>
            </div>
            <div class="row g-4">
                @foreach (Room featuredRoom in featuredRoomList)
                {
                    @Html.Partial("_RoomCard", featuredRoom)
                }
            </div>
        </div>
    </div>
}
<!-- Room End -->
<!-- Video Start -->
<div class="container-xxl py-5 px-0 wow zoomIn" data-wow-delay="0.1s">
    <div class="row g-0">
        <div class="col-md-6 bg-dark d-flex align-items-center">
            <div class="p-5">
                <h6 class="section-title home-video-title text-white text-uppercase mb-3">Now Open</h6>
                <h1 class="text-white mb-4">Explore Natural Wonder</h1>
                <p class="text-white mb-4">A breathtaking natural wonder, where cascading waters merge with lush greenery, inviting travelers to immerse themselves in the mesmerizing beauty of nature's masterpiece. Discover serenity amidst the roar of the falls, as you embark on a journey of awe and wonder.</p>
                <a href="/Location/Detail?locationId=23" class="btn btn-primary py-md-3 px-md-5 me-3">Explore</a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="video home-video-thumbnail">
                <button id="home_video_play_button" class="btn-play" data-bs-toggle="modal" data-src="https://player.vimeo.com/video/206443481" data-bs-target="#home_video_modal">
                    <span></span>
                </button>
            </div>
        </div>
    </div>
</div>

<div id="home_video_modal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content rounded-0">
            <div class="modal-header">
                <h5 class="modal-title">Explore Natural Wonder</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- 16:9 aspect ratio -->
                <div class="ratio ratio-16x9">
                    <iframe id="home_video_iframe" class="embed-responsive-item" src="" allow="autoplay"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Video End -->
<!-- Service Start -->
<div class="container-xxl py-5 service-container">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Our Services</h6>
            <h1 class="mb-5">Explore Our <span class="text-primary text-uppercase">Services</span></h1>
        </div>
        <div class="row g-4">
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <a class="service-item rounded cursor-default" href="javascript:void(0)">
                    <div class="service-icon bg-transparent border rounded p-1">
                        <div class="w-100 h-100 border rounded d-flex align-items-center justify-content-center">
                            <i class="fa fa-hotel fa-2x text-primary service-icon-dimension"></i>
                        </div>
                    </div>
                    <h5 class="mb-3">Rooms & Appartment</h5>
                    <p class="text-body mb-0">Discover and book accommodations worldwide with Mini Traveling Explorer, offering options from budget hostels to luxury resorts, with detailed information and reviews for the perfect stay.</p>
                </a>
            </div>
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.2s">
                <a class="service-item rounded cursor-default" href="javascript:void(0)">
                    <div class="service-icon bg-transparent border rounded p-1">
                        <div class="w-100 h-100 border rounded d-flex align-items-center justify-content-center">
                            <i class="fa fa-book fa-2x text-primary service-icon-dimension"></i>
                        </div>
                    </div>
                    <h5 class="mb-3">Journey Planner</h5>
                    <p class="text-body mb-0">Get personalized trip planning with Mini Traveling Explorer, crafting custom itineraries to match your preferences, interests, and budget, streamlining the process for a seamless travel adventure.</p>
                </a>
            </div>
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                <a class="service-item rounded cursor-default" href="javascript:void(0)">
                    <div class="service-icon bg-transparent border rounded p-1">
                        <div class="w-100 h-100 border rounded d-flex align-items-center justify-content-center">
                            <i class="fa fa-spa fa-2x text-primary service-icon-dimension"></i>
                        </div>
                    </div>
                    <h5 class="mb-3">Spa & Fitness</h5>
                    <p class="text-body mb-0">Promote wellness on the move with Mini Traveling Explorer, granting access to spa facilities, yoga sessions, and top-notch gym amenities for travelers' relaxation and fitness needs.</p>
                </a>
            </div>
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.4s">
                <a class="service-item rounded cursor-default" href="javascript:void(0)">
                    <div class="service-icon bg-transparent border rounded p-1">
                        <div class="w-100 h-100 border rounded d-flex align-items-center justify-content-center">
                            <i class="fa fa-map-marked fa-2x text-primary service-icon-dimension"></i>
                        </div>
                    </div>
                    <h5 class="mb-3">Destination Guides</h5>
                    <p class="text-body mb-0">Plan your trips effectively with Mini Traveling Explorer's destination guides, offering insights into local attractions, dining, transportation, and safety worldwide for a hassle-free travel experience.</p>
                </a>
            </div>
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                <a class="service-item rounded cursor-default" href="javascript:void(0)">
                    <div class="service-icon bg-transparent border rounded p-1">
                        <div class="w-100 h-100 border rounded d-flex align-items-center justify-content-center">
                            <i class="fa fa-glass-cheers fa-2x text-primary service-icon-dimension"></i>
                        </div>
                    </div>
                    <h5 class="mb-3">Event & Party</h5>
                    <p class="text-body mb-0">Elevate your travel experience with Mini Traveling Explorer's event planning services, offering venue recommendations, catering options, and logistical support for unforgettable corporate conferences, weddings, or family reunions.</p>
                </a>
            </div>
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.6s">
                <a class="service-item rounded cursor-default" href="javascript:void(0)">
                    <div class="service-icon bg-transparent border rounded p-1">
                        <div class="w-100 h-100 border rounded d-flex align-items-center justify-content-center">
                            <i class="fa fa-clock fa-2x text-primary service-icon-dimension"></i>
                        </div>
                    </div>
                    <h5 class="mb-3">24/7 Customer Support</h5>
                    <p class="text-body mb-0">Get 24/7 customer support with Mini Traveling Explorer for seamless travel assistance via email, or phone and you can pay a visit to our office during business hours, ensuring a smooth and enjoyable journey experience.</p>
                </a>
            </div>
        </div>
    </div>
</div>
<!-- Service End -->
<!-- Testimonial Start -->
@if (testimonialList != null && testimonialList.Any())
{
    <div class="container-xxl testimonial my-5 py-5 bg-dark wow zoomIn home-testimonial-container" data-wow-delay="0.1s">
        <div class="container">
            <div class="owl-carousel testimonial-carousel py-5">
                @foreach (Testimonial testimonial in testimonialList)
                {
                    @Html.Partial("_TestimonialCard", testimonial)
                }
            </div>
        </div>
    </div>
}
<!-- Testimonial End -->

@Html.Partial("_Footer")