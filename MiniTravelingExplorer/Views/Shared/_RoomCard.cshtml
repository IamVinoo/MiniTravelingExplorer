@using MiniTravelingExplorer.Utils
@model MiniTravelingExplorer.Models.Room

@if (Model != null)
{
    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="@Model.AnimationDelayTime">
        <div class="room-item shadow rounded overflow-hidden">
            <div class="position-relative">
                <img class="img-fluid room-card-item-image" src="@Model.RoomImageUrl" alt="@Model.Name" title="@Model.Name">
                <small class="position-absolute start-0 top-100 translate-middle-y bg-primary text-white rounded py-1 px-3 ms-4">
                    <span>@Model.CurrencySymbol</span><span>@Model.Rate</span>@Constant.FORWARD_SLASH<span>@Model.PerDayOrNight</span>
                </small>
            </div>
            <div class="p-4 mt-2">
                <div class="d-flex justify-content-between mb-3 room-item-name-container">
                    <h5 class="mb-0 w-64">@Model.Name</h5>
                    <div class="ps-2 room-rating-container">
                        @{
                            float rating = Model.Rating;
                            int count = 0;

                            for (int i = 1; i <= rating; i++)
                            {
                                count += 1;
                                <small class="fa fa-star text-primary"></small>
                            }

                            if (rating > count)
                            {
                                <small class="fa fa-star-half text-primary"></small>
                            }
                        }
                    </div>
                </div>
                <div class="d-flex mb-3">
                    <small class="border-end me-3 pe-3"><i class="fa fa-bed text-primary me-2"></i>@Model.BedNumber Bed</small>
                    <small class="border-end me-3 pe-3"><i class="fa fa-bath text-primary me-2"></i>@Model.BathNumber Bath</small>
                    <small>
                        @if (Model.HasWifi)
                        {
                            <i class="fa fa-wifi text-primary me-2"></i>
                        }
                        else
                        {
                            <i class="fa fa-ban text-primary me-2"></i><span>No</span>
                        }
                        Wifi
                    </small>
                </div>
                <p class="text-body mb-3 room-item-description">@Model.Description</p>
                <div class="d-flex justify-content-end">
                    <a class="btn btn-sm btn-primary rounded py-2 px-4" href="/Default/Development">Book Now</a>
                </div>
            </div>
        </div>
    </div>
}
