@using MiniTravelingExplorer.Utils

<!-- ======= Header ======= -->
<header id="header" class="header fixed-top d-flex align-items-center">

    <div class="d-flex align-items-center justify-content-between admin-logo-header">
        <a href="/Home/Home" class="logo d-flex align-items-center">
            <img class="admin-logo" src="../../Images/Logo-Full-Transparent.jpg" alt="Mini Traveling Explorer">
        </a>
        <i class="bi bi-list toggle-sidebar-btn admin-toggle-sidebar-btn"></i>
    </div><!-- End Logo -->

    <nav class="header-nav ms-auto">
        <ul class="d-flex align-items-center">
            <li class="nav-item dropdown pe-3">
                <a class="nav-link nav-profile d-flex align-items-center pe-0" href="javascript:void(0);" data-bs-toggle="dropdown">
                    <img src="@Session[Constant.ADMIN_USER_IMAGE]" alt="@Session[Constant.ADMIN_USER_FULL_NAME]" class="rounded-circle">
                    <span class="d-none d-md-block dropdown-toggle ps-2 cursor-pointer">My Profile</span>
                </a><!-- End Profile Image Icon -->

                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="javascript:void(0);">
                            <i class="bi bi-person"></i>
                            <span>My Profile - @Session[Constant.ADMIN_USER_FULL_NAME]</span>
                        </a>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center admin-logout" href="javascript:void(0);">
                            <i class="bi bi-box-arrow-right"></i>
                            <span class="cursor-pointer">Sign Out</span>
                        </a>
                    </li>

                </ul><!-- End Profile Dropdown Items -->
            </li><!-- End Profile Nav -->

        </ul>
    </nav><!-- End Icons Navigation -->
</header>
<!-- End Header -->