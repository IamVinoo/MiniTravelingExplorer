@using MiniTravelingExplorer.Utils
@using System.Configuration;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_Header")

@{
    int waitingTime = Convert.ToInt32(ConfigurationManager.AppSettings[Constant.EMAIL_RESEND_CODE_WAITING_TIME_KEY]);
}

<input type="hidden" id="change_email_waiting_time_value" value="@waitingTime" />

<div class="container register">
    <div class="row">
        <div class="col-md-3 change-email-left align-center-elements icon-group">
            <img src="@(@Session[Constant.USER_IMAGE] != null ? @Session[Constant.USER_IMAGE] : "../../Images/User.jpg")" alt="User Image" />
            <span class="change-email-user-name">@Session[Constant.FULL_NAME]</span>
        </div>
        <div class="col-md-9 register-right">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <div class="row register-form align-items-self-start register-container">
                        <div class="col-md-12">
                            <h3 class="change-email-title-heading text-center">Change Email</h3>
                        </div>
                        <div class="col-md-12 align-center-elements justify-content-center">
                            <div class="form-group">
                                <label>Email</label>
                                <input id="change_email_email" class="form-control" placeholder="Email *" maxlength="100" />
                                <span id="change_email_email_error_message" class="field-validation-error hide" data-valmsg-for="change_email_email" data-valmsg-replace="true">@Constant.ENTER_EMAIL_ERROR_MESSAGE</span>
                                <span id="change_email_email_invalid_error_message" class="field-validation-error hide" data-valmsg-for="change_email_email" data-valmsg-replace="true">@Constant.ENTER_EMAIL_INVALID_ERROR_MESSAGE</span>
                                <span id="change_email_email_send_verification_code_error_message" class="field-validation-error hide" data-valmsg-for="change_email_email" data-valmsg-replace="true">@Constant.EMAIL_SEND_VERIFICATION_CODE_ERROR_MESSAGE</span>
                                <span id="change_email_email_code_verification_error_message" class="field-validation-error hide" data-valmsg-for="change_email_email" data-valmsg-replace="true">@Constant.EMAIL_CODE_VERIFICATION_ERROR_MESSAGE</span>
                            </div>
                            <a href="javascript:void(0);" class="change-email-send-code hide">Send Code</a>
                            <hr class="email-change-liner d-md-none"/>
                            <label class="change-email-resend-code hide">Resend code in <span class="change-email-resend-code-time"></span> seconds</label>
                        </div>
                        <div class="col-md-12 align-center-elements justify-content-center mt-1 margin-bottom-sm-m15 email-change-code-container hide">
                            <div class="form-group email-change-form-group">
                                <input type="number" class="form-control email-change-code-input" maxlength="1" />
                                <input type="number" class="form-control email-change-code-input" maxlength="1" />
                                <input type="number" class="form-control email-change-code-input" maxlength="1" />
                                <input type="number" class="form-control email-change-code-input" maxlength="1" />
                            </div>
                        </div>
                        <div class="col-md-12 align-center-elements justify-content-center margin-bottom-sm-m15">
                            <button id="change_email_button" class="btnChangeEmail login-register-button hover-float-shadow align-items-center pr-25">Change Email</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_Footer")